<div>
  <%= link_to 'New Gram', new_gram_path %>
</div>

<% @grams.each do |gram| %>
  <div>
    <div>
      <div>
        Me
      </div>
      <div>
        <%= link_to time_ago_in_words(gram.created_at), gram_path(gram) %>
        <%= link_to 'X', gram_path(gram), method: :delete, data: { confirm: 'Are you sure you want to delete this Gram?'} %>
      </div>
    </div>
    <div>
      <div><%= gram.title %></div>
      <div><%= gram.content %></div>
      <div><%= gram.country_code %></div>
      <div><%= image_tag gram.image_url(:cropped) %></div>
    </div>
  </div>
  <hr/>
<% end %>
